CFLAGS	=	-Wall -Werror -Wextra -std=c++98

SRC		=	src/Contact.cpp src/PhoneBook.cpp src/main.cpp \

OBJ		=	$(SRC:.cpp=.o)

NAME	=	PhoneBook


all:	$(NAME)
$(NAME): ${OBJ}
	@g++ ${CFLAGS} ${OBJ} -o ${NAME}

clean:
	@rm -f ${OBJ}

fclean:	clean
	@rm -f ${NAME}

re:		fclean all

.PHONY: all clean fclean re