CFLAGS	=	-Wall -Werror -Wextra -std=c++98

SRC		=	 src/HumanA.cpp src/HumanB.cpp src/Weapon.cpp src/main.cpp \

OBJ		=	$(SRC:.cpp=.o)

NAME	=	Violence

all:	$(NAME)
$(NAME): ${OBJ}
	@g++ ${CFLAGS} ${OBJ} -o ${NAME}

clean:
	@rm -f ${OBJ}

fclean:	clean
	@rm -f ${NAME}

re:		fclean all

.PHONY: all clean fclean re